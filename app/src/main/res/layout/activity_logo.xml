<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.meysi.desarrollo.servirural_android.LogoActivity"
    android:background="@drawable/cuadrado_b"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:src="@drawable/city"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="159dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="imagen" />

    <ImageView
        android:id="@+id/loadingView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/loading"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:contentDescription="imagen2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:src="@drawable/logofy"
        android:contentDescription="imagen2"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/loadingView"
        android:layout_alignEnd="@+id/loadingView"
        android:layout_toRightOf="@+id/scrollView4"
        android:layout_toEndOf="@+id/scrollView4" />


</RelativeLayout>
