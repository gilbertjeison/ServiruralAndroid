<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <TableLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:background="@drawable/list_back"
       android:layout_margin="5dp">
       <TableRow android:id="@+id/s">

           <LinearLayout android:orientation="vertical">
               <TextView android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:text="@string/abc_action_bar_home_description"
                   android:layout_marginLeft="5dp"
                   android:id="@+id/lblLinea" />
               <TextView android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:text="@string/abc_action_bar_home_description"
                   android:layout_marginLeft="5dp"
                   android:layout_marginTop="5dp"
                   android:id="@+id/lblCorte" />
           </LinearLayout>

           <TextView android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_marginTop="2dp"
               android:text="@string/abc_action_bar_home_description"
               android:layout_marginLeft="20dp"
               android:id="@+id/lblPrecio" />
           <EditText android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_marginLeft="20dp"
               android:width="110dp"
               android:layout_marginTop="2dp"
               android:background="@drawable/cuadrado_b"
               android:id="@+id/txtPAGAR"
               android:inputType="number" />
       </TableRow>
   </TableLayout>
</RelativeLayout>