<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.meysi.desarrollo.servirural_android.ListRecaudosActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >

    <include layout="@layout/toolbar"
        android:id="@+id/appbar" />
    </android.support.design.widget.AppBarLayout>
    <ListView
        android:id="@+id/lvRecaudos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="60dp">
    </ListView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@drawable/cuadrado_v"
            android:id="@+id/linearLayout1" >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
            android:text="@string/total_clientes"/>

            <TextView
                android:id="@+id/lblCantidadClientes"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:text="0"/>

         </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/cuadrado_v"
        android:id="@+id/linearLayout2" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/total_saldo"/>

        <TextView
            android:id="@+id/lblSaldoTotalClientes"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:text="$0"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@drawable/cuadrado_v"
            android:id="@+id/linearLayout3" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="@string/total_saldo_recaudado"/>

            <TextView
                android:id="@+id/lblSaldoRecaudado"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:text="$0"/>

    </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO HAY CLIENTES... !"
        android:id="@+id/txtNoHayClientes"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#0c0102"
        android:textSize="25dp"
        android:textStyle="normal|bold|italic"
        android:backgroundTint="#736d6d"
        android:singleLine="true"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Por favor contacta con administrador."
        android:id="@+id/txtSubNoHayClientes"
        android:textColor="#0c0102"
        android:textSize="12dp"
        android:textStyle="normal|bold|italic"
        android:backgroundTint="#736d6d"
        android:singleLine="true"
        android:typeface="serif"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="74dp" />

</RelativeLayout>
